<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activities.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:layout_weight="2">

        <ImageView
            android:id="@+id/logoContainer"
            android:layout_width="@dimen/square_image_size"
            android:layout_height="@dimen/square_image_size"
            android:layout_centerInParent="true"
            android:src="@drawable/logo"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"/>

        <TextView
            android:layout_below="@id/logoContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logo_header"
            android:layout_centerHorizontal="true"
            style="@style/LoginTextStyle"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <com.facebook.login.widget.LoginButton
            android:id="@+id/fb_login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:layout_centerInParent="true"
            android:textSize="@dimen/login_button_text_size"
            android:fontFamily="sans-serif"
            android:paddingTop="@dimen/login_button_padding"
            android:paddingBottom="@dimen/login_button_padding"/>

    </RelativeLayout>

</LinearLayout>
