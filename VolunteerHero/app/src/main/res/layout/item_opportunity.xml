<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/ivOrgPic"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:transitionName="@string/eventImage"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvOrgName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivOrgPic"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/ivOrgPic"
        android:transitionName="@string/orgName"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="SF SPCA"/>

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        tools:text="San Francisco, CA"
        android:layout_below="@+id/tvOrgName"
        android:layout_alignStart="@+id/tvOrgName"/>


    <TextView
        android:id="@+id/tvTopics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Education, Childcare"
        android:layout_below="@+id/tvLocation"
        android:layout_alignStart="@+id/tvOrgName"/>

</RelativeLayout>