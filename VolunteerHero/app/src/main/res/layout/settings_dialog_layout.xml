<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/query_input_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/query_label_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_search_query"
            style="@style/SettingsTextStyle"
            android:paddingTop="@dimen/search_padding"
            android:paddingRight="@dimen/search_padding"/>

        <EditText
            android:id="@+id/query_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SettingsEditTextStyle"
            android:layout_weight="1"
            android:paddingTop="@dimen/search_padding" />

        <TextView
            android:id="@+id/loc_label_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_loc_query"
            android:textSize="@dimen/settings_dialog_text_size"
            style="@style/SettingsTextStyle"
            android:paddingTop="@dimen/search_padding"
            android:paddingRight="@dimen/search_padding"
            android:paddingBottom="@dimen/search_padding"/>

        <EditText
            android:id="@+id/loc_query_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SettingsEditTextStyle"
            android:layout_weight="1"
            android:paddingTop="@dimen/search_padding"
            android:paddingBottom="@dimen/search_padding" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/activity_vertical_margin"
        android:layout_below="@id/query_input_layout">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel_button_text"
            android:textColor="@android:color/white"
            android:background="@drawable/button_shape"
            android:layout_alignParentStart="true"
            android:textSize="@dimen/settings_dialog_item_text_size" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="@string/save_button_text"
            android:textColor="@android:color/white"
            android:background="@drawable/button_shape"
            android:textSize="@dimen/settings_dialog_item_text_size"
            android:padding="@dimen/search_padding"/>
    </RelativeLayout>

</RelativeLayout>
